{% extends 'base.html.twig' %}

{% block body %}
    <!-- main content -->
    <main class="main">
    <div class="container">
    <div class="row row--grid">
        <!-- breadcrumb -->
        <div class="col-12">
            <ul class="breadcrumb">
                <li class="breadcrumb__item"><a href="index.html">Home</a></li>
                <li class="breadcrumb__item"><a href="author.html">Author</a></li>
                <li class="breadcrumb__item breadcrumb__item--active">Item</li>
            </ul>
        </div>
        <!-- end breadcrumb -->

        <!-- title -->
        <div class="col-12">
            <div class="main__title main__title--page">
                <h1>{{ nftItem.title }}</h1>
            </div>
        </div>
        <!-- end title -->
    </div>

        <div class="row">
            <!-- content -->
            <div class="col-12 col-xl-8">
                <div class="asset__item">
                    <a class="asset__img" href="{{ asset('NFTS/'~ nftItem.image) }}"><img src="{{ asset('NFTS/'~ nftItem.image) }}" width="520" height="520" alt=""></a>

                    <!-- share -->
                    <div class="share share--asset">
