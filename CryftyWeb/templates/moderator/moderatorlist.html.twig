{% extends 'baseAdmin.html.twig' %}

{% block title %}Admin - View Moderator{% endblock %}

{% block body %}

    <section id="main-content">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i> Moderator list : </h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <section id="unseen">

                        <style>
                            td {
                                text-align: center;
                            }
                        </style>
                        <a class="btn btn-info" href="{{ path('registermoderator') }}">Add New Moderator</a>
                        <table class="table table-bordered table-striped table-condensed ">
                            <thead>
                            <tr>
                                <th>Username</th>
                                <th>First Name</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for m in moderator %}
                                <tr>
                                    <form method="post">
                                        <td>{{ m.username }}</td>
                                        <td><strong>{{ m.firstname }}</strong></td>
                                        <td class="numeric"><a href="{{ path('updatemoderator',{'id': m.id }) }}" class="btn btn-theme btn-sm">Update</a></td>
                                        <td class="numeric"><a href="{{ path('delete_moderator',{'id': m.id }) }}" class="btn btn-theme04 btn-sm" onclick="return confirm('are u sure?')">Delete</a></td>
                                        <td class="numeric"><a href="{{ path('show_moderator',{'id': m.id }) }}" class="btn btn-theme01 btn-sm">
                                                <i class="fa fa-arrow-circle-o-right" style="font-size: large"/></a></td>
                                    </form>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            {{ knp_pagination_render(moderator) }}

        </section>
        <!-- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->

{% endblock %}

