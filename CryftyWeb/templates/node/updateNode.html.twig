{% extends 'baseAdmin.html.twig' %}

{% block title %} Cryfty Admin | Update Node!{% endblock %}

{% block body %}

    <!-- **********************************************************************************************************************************************************
        MAIN CONTENT
        *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i> Update Existing Node</h3>
            <div class="row mt">
                <div class="col-lg-12">
                    {{ form_start(node_update_form,{'attr':{'class':'form-horizontal style-form'}}) }}
                    <div class="text-danger"><small>{{ form_errors(node_update_form) }}</small></div>
                    <div class="form-group">
                        {{ form_label(node_update_form.nodeLabel) }}

                        <div class="col-sm-10">
                            {{ form_widget(node_update_form.nodeLabel) }}
                        </div>

                    </div>
                    {{ form_end(node_update_form) }}
                </div>
            </div>
        </section>
        <!-- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->

{% endblock %}

