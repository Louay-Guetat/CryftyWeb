{% extends 'base.html.twig' %}

{% block body %}

    <h1>Blog Articles</h1>
    <!-- header -->
    <!-- end header -->

    <!-- main content -->
    <main class="main">
        <div class="container">
            <div class="row row--grid">
                <!-- breadcrumb -->
                <div class="col-12">
                    <ul class="breadcrumb">
                        <li class="breadcrumb__item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb__item breadcrumb__item--active"><a href="AfficheBA">Blog</a></li>
                    </ul>
                </div>
                <!-- end breadcrumb -->

                <!-- title -->
                <div class="col-12">
                    <div class="main__title main__title--page">
                        <h1>Our Blog</h1>
                    </div>
                </div>
                <!-- end title -->

                <!-- filter -->
                <div class="col-12">
                    <div class="main__filter">
                        <form method="post"  action="{{ path('search') }}" class="main__filter-search">
                            <!--    <input type="text" name="sear" placeholder="Search...">-->
                            <input type="text" name="sear" placeholder="search by title"><input type="submit" value="search">
                            <button type="button"  type="submit" value="search"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.71,20.29,18,16.61A9,9,0,1,0,16.61,18l3.68,3.68a1,1,0,0,0,1.42,0A1,1,0,0,0,21.71,20.29ZM11,18a7,7,0,1,1,7-7A7,7,0,0,1,11,18Z"/></svg></button>

                        </form>



                    </div>


                </div>

                <!-- end filter -->
            </div>


            <div class="row row--grid">
                <!-- post -->


                {% for a in BlogArticle%}

                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="post">
                            <a href="{{ path('articleItem',{'id': a.id }) }}" class="post__img">
                                <img  src="{{ asset( 'uploads/blogs/'~ a.image)|imagine_filter('article') }}"  alt="image">
                            </a>

                            <div class="post__content">
                                <a href="#" class="post__category">{{ a.category }}</a>
                                <h3 style="width: auto" class="post__title">{{ a.title }}</h3>
                                <div class="post__meta">
                                    <span class="post__date"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12,2A10,10,0,1,0,22,12,10.01114,10.01114,0,0,0,12,2Zm0,18a8,8,0,1,1,8-8A8.00917,8.00917,0,0,1,12,20ZM14.09814,9.63379,13,10.26807V7a1,1,0,0,0-2,0v5a1.00025,1.00025,0,0,0,1.5.86621l2.59814-1.5a1.00016,1.00016,0,1,0-1-1.73242Z"/></svg> {{a.getDate()|date('d-m-Y')}}</span>
                                    <span class="post__comments"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17,9H7a1,1,0,0,0,0,2H17a1,1,0,0,0,0-2Zm-4,4H7a1,1,0,0,0,0,2h6a1,1,0,0,0,0-2ZM12,2A10,10,0,0,0,2,12a9.89,9.89,0,0,0,2.26,6.33l-2,2a1,1,0,0,0-.21,1.09A1,1,0,0,0,3,22h9A10,10,0,0,0,12,2Zm0,18H5.41l.93-.93a1,1,0,0,0,0-1.41A8,8,0,1,1,12,20Z"/></svg> {{ a.author }}</span>
                                </div>
                            </div>

                        </div>
                    </div>


                {% endfor %}

            </div>
        </div>
        <div class="row row--grid">
            <div class="col-12">
                <div class="paginator">
                    <span style="color:powderblue " >pages</span>

                <li style="color:powderblue ">
                        {{ knp_pagination_render(BlogArticle) }}
                </li>
                </div>
            </div>
        </div>


    </main>
    <!-- end main content -->
    <!-- JS -->
    <script src="js/jquery-3.5.1.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/select2.min.js"></script>
    <script src="js/smooth-scrollbar.js"></script>
    <script src="js/jquery.countdown.min.js"></script>
    <script src="js/main.js"></script>



{% endblock %}

