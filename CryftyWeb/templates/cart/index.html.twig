{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    <main class="main">
        <!-- home -->

            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="home__content">
                            <h1 class="home__title">Votre Panier</h1>
                            {% if dataPanier | length >0 %}
                            <table border="3" style="size: 150px">
                                    <thead>
                                <tr>
                                    <th class="home__text">Title NFT</th>
                                    <th class="home__text">Description</th>
                                    <th class="home__text">Image</th>
                                    <th class="home__text">Prix</th>
                                    <th class="home__text">Actions</th>
                                </tr>
                                </thead>
                                {% for element in dataPanier %}
                                    <tbody>
                                    <tr>
                                        <td>{{ element.produit.title }}</td>
                                        <td class="text-end">{{ element.produit.description }} </td>
                                        <td><img src="{{asset('NFTS/'~ element.produit.image) }}"></td>
                                        <td>{{ element.produit.price }} €</td>
                                        <td>
                                           <a href="{{path('delete_panier', {id: element.produit.id})}}" class="btn btn-warning">
                                               <button class="asset__btn" type="submit">
                                                   <span class="iconify" data-icon="bi:cart-plus-fill" style="color: yellow;align-content: center"></span>
                                                   Supprimer </button></a>
                                            </a>
                                        </td>
                                    </tr>

                                        </tbody>
                                {% endfor %}
                                <tfoot>
                                {% set tab=0 %}
                                {% for element in dataPanier %}
                                {% set tab=tab+element.produit.price %}
                                {% endfor %}
                                <tr>
                                    <td colspan="3" class="home__title">Total : </td>
                                    <td colspan="2">{{ tab }}</td>
                                </tr>
                                </tfoot>
                            </table>

                            {% else %}

                                <h5 class="home__text"> Votre panier est vide</h5>

                            {% endif %}
                            <div class="sign__form"  style="margin-left: 700px;size: 150px">
                                {% set tab=0 %}
                                {% for element in dataPanier %}
                                    {% set tab=tab+element.produit.price %}
                                {% endfor %}
                                <span class="home__text" >Total :{{ tab }}</span>
                           {# <script src="https://js.stripe.com/v3/"></script> #}
                            <a href="{{path('TransactionWallet',{'id': cart.id })}}" class="home__btn home__btn--clr">Procéder au paiement avec wallet</a>
                            <span class="sign__delimiter" style="margin-top: 30px">Or</span>
                            <button id="checkout-button" class="asset__btn" > Procéder au paiement avec carte bancaire</button>

                        </div>

                        </div>

                    </div>
                </div>
            </div>

        <!-- end home -->
    </main>

    </body>
{% endblock %}
